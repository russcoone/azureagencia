extends ./layout/layout

block content
  main.container.mt-5
    h1.text-center.mt-5 #{pagina}
    blockquote.text-center Leer sobre nuestros clientes y susu experiencias
    include ./layout/bloque_testimoniales

    .row

      .col-md-12
        h2.d.block.w-100.text-center Agrega un Testimonial
        if(errores)
          each error in errores
            .alert.col.alert-danger.text-center= error.mensaje
        .row.justify-content-center.col
          .col-md-8
            form(action="/testimoniales" method="POST")
              .form-group
                label(for="nombre") Nombre
                input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value= nombre)   
              .form-group
                label(for="correo") Correo Electronico
                input#nombre(type="text", placeholder="Correo Electronico", name="correo", class="form-control", value= correo)
              .form-group
                label(for="mensaje") Mensaje
                textarea#mensaje(class="form-control", placeholder="Tu Mensaje", name="mensaje",rows= 3)=mensaje

              input.btn.btn-success.btn-block.mt-3(type="submit")  


